%h2 Реєстрація
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %table
    %tbody
      %tr
        %td= f.label :email, 'Email'
        %td
          = f.email_field :email
          .error=resource.errors.full_messages_for(:email).first
      %tr
        %td= f.label :password, 'Пароль'
        %td
          = f.password_field :password
          .error=resource.errors.full_messages_for(:password).first

      %tr
        %td= f.label :password_confirmation, 'Підтвердження'
        %td
          = f.password_field :password_confirmation
      %tr
        %td
          %br
        %td= f.submit 'Зареєструватись'
  %br